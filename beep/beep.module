<?php

/**
 * @file
 * Provide a simulated beep.
 */

/**
 * Logs a Beep system message.
 */
function beep_beep() {
  watchdog('beep', 'Beep!');
}

/**
 * Implements hook_user_login().
 */
function beep_user_login(&$edit, $account) {
  beep_beep();
}

/**
 * Implements hook_node_insert().
 */
function beep_node_insert($node) {
  dpm($node);

  beep_beep();
}
